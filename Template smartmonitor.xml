                            <value_type>CHAR</value_type>
                            <applications>
                                <application>
                                    <name>SMART monitoring (smartctl)</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>REGEX</type>
                                    <params>(?:Vendor: +(.+)\nProduct:|[Dd]evice [Mm]odel:|[Mm]odel [Nn]umber:) +(.+)
\1 \2</params>
                                </step>
                                <step>
