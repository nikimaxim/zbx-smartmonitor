                                    <params>[Ss]erial [Nn]umber:\s+([\d\w-]+)
\1</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>storage.get[&quot;{#STORAGE.CMD}&quot;]</key>
                            </master_item>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{diff()}=1</expression>
